{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "declaration": true,
    "baseUrl": "./src",
    "composite": true,
    "paths": {
      "#enums/*": ["./enums/*.ts"],
      "#validators/*": ["./validators/*.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
